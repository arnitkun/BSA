{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "sonarjs"
    ],
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "off",
        "no-param-reassign": "off",
        "func-names": "off",
        "arrow-parens": "off",
        "max-len": ["error", { "code": 110 }],
        "no-console": "off",
        "sonarjs/cognitive-complexity": "warn"
    }
}
